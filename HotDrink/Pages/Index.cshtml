@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">

    @foreach (var item in @Model.drinks.HotDrinks)
    {
        if (item.AvailableMonthStart <= DateTime.Now.Month && item.AvailableMonthEnd >= DateTime.Now.Month)
        {
            <div class="itemBox">
                <a asp-area="" asp-page="/Page2" asp-route-Name="@item.name">
                    <img src="images/@item.image" style="width:100px;height:50px; margin:0 auto; display:block;" />
                    <div class="nameBox">
                        @item.name
                    </div>
                </a>
            </div>
            
        }
    }
</div>

