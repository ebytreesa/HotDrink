@page 
@model HotDrink.Pages.orderSummaryModel
@{
    ViewData["Title"] = "Order page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>orderSummary</title>
</head>
<body>
    <h2>Order Summary</h2>
    <p>Drink: @Model.Name</p>
    @if (@Model.Strength != null)
    {
        <p>Strength: @Model.Strength</p>
    }
    @if (@Model.Sweetner != null)
    {
        <p>Sweetner: @Model.Sweetner</p>
    }
    @if (@Model.Extra != null)
    {
        <p>Extra: @Model.Extra</p>
    }
    @if (@Model.Delivery != null)
    {
<p>Delivery: @Model.Delivery</p>
    }
<img src="images/@Model.image" style="width:200px;height:170px; margin:0 auto; display:block;" />
</body>
</html>
